<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportDetails"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20sp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:drawableLeftCompat="@drawable/minilogo"
            android:textColor="#018191"
            android:gravity="center"
            android:padding="5dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDF6F5F5"
        android:elevation="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/s_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="By: username"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/s_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="25/07/2022"
        android:textColor="#555252"
        android:textAlignment="textEnd"
        android:textSize="18dp"/>
    <TextView
        android:layout_marginVertical="10dp"
        android:id="@+id/s_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="details"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/s_resp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:lines="4"
        android:text="No Response Yet..."
        android:textSize="17dp"
        android:enabled="false"
android:gravity="top"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradient_light"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linear17"
        android:visibility="gone"
        android:paddingVertical="10dp">

        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="@drawable/box_4"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:text="Send"/>
        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/box_5"
            android:textColor="@color/white"
            android:text="@string/cancel"/>
    </LinearLayout>

</LinearLayout>